@model MvcMovie.Models.StudioViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Studios" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" name="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Studios[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Studios)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudioID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StudioID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudioID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
